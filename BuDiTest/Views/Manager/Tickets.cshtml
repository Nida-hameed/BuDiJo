@model IEnumerable<BuDiTest.Models.TicketsIndex>
@{
    ViewData["Title"] = "Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container my-4">
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" >
        <thead class="thead-light">
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Description</th>
                <th>Assigned By</th>
                <th>Attachment</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                            <a target="_blank" href="@Url.Action("Detail","Manger",new{Id=item.TicketID})"><i class="bi bi-card-list"></i></a>
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.RaisedByEmployeeId)
                    </td>
                    <td>
                   @*     <a target="_blank" href="@Url.Content(item.AttchmentName)"><i class="bi bi-download"></i></a>*@
                            <a asp-action="GetPdf" asp-controller="Manager" asp-route-id="@item.TicketID"><i class="bi bi-download"></i></a>
                    </td>
                  
                    <td>
                            <a class="btn btn-primary" asp-action="AssignTicket" asp-route-ticketId="@item.TicketID">
                            <i class="bi bi-person"></i> Assign Ticket
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>
