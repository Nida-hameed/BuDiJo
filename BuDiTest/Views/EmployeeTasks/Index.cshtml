@model IEnumerable<BuDiTest.Models.EmployeeTask>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RaisedByEmployeeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RaisedByEmployeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task.TaskID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeTaskID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeTaskID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeTaskID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
