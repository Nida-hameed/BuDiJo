<section class="content">
    <div class="container-fluid">
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="email-form" method="post">
            <div class="row">
                <div class="col-md-3">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
                        <li class="nav-item"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
                        <li class="nav-item"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>

                    </ul>
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            @if (Model.IsEmailConfirmed)
                            {
                                <div class="form-group row">
                                    <label for="inputName2" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input asp-for="Email" class="form-control" readonly />
                                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                                    </div>
                                </div>
                                @*<div class="form-floating input-group">
                                        <input asp-for="Email" class="form-control" disabled />
                                        <div class="input-group-append">
                                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                                        </div>
                                        <label asp-for="Email" class="form-label"></label>
                                    </div>*@
                            }
                            else
                            {
                                <div class="form-group row">
                                    <label for="inputName2" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input asp-for="Email" class="form-control" readonly />
                                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                                    </div>
                                </div>
                                @*<div class="form-floating">
                                        <input asp-for="Email" class="form-control" disabled />
                                        <label asp-for="Email" class="form-label"></label>
                                        <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                                    </div>*@
                            }
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
                                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                                </div>
                            </div>
                            @*<div class="form-floating">
                                    <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                                    <label asp-for="Input.NewEmail" class="form-label"></label>
                                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                                </div>*@
                            <div class="form-group row">
                                <div class="offset-sm-2 col-sm-10">
                                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-30 btn btn-lg btn-primary">Change email</button>
                                </div>
                            </div>

                            @*<button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-30 btn btn-lg btn-primary">Change email</button>*@

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
